<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_investigation"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/home_scale">

        <com.yd.org.sellpopularizesystem.myView.CircleImageView
            android:id="@+id/ivHeadPhoto"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/settingbt"/>

        <TextView
            android:id="@+id/tvCustomeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ivHeadPhoto"
            android:layout_alignRight="@+id/ivHeadPhoto"
            android:layout_below="@+id/ivHeadPhoto"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/customename"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_margin_14">

                <TextView
                    style="@style/WrapWrap"
                    android:layout_centerVertical="true"
                    android:text="@string/contact"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/tv_size_15"/>

                <EditText
                    android:id="@+id/etContact"
                    style="@style/MatchWrap"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/tv_size_15"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/search_edit_bac">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_margin_14">

                <TextView
                    style="@style/WrapWrap"
                    android:layout_centerVertical="true"
                    android:text="@string/address"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/tv_size_15"/>

                <EditText
                    android:id="@+id/etAddress"
                    style="@style/MatchWrap"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/tv_size_15"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/search_edit_bac">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding_margin_14">

                <TextView
                    style="@style/WrapWrap"
                    android:layout_centerVertical="true"
                    android:text="@string/remark"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/tv_size_15"/>

                <EditText
                    style="@style/MatchWrap"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/tv_size_15"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/search_edit_bac">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    style="@style/WrapWrap"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/padding_margin_14"
                    android:layout_marginTop="@dimen/padding_margin_14"
                    android:layout_marginBottom="@dimen/padding_margin_14"
                    android:text="@string/datetime"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/tv_size_15"/>

                <TextView
                    android:id="@+id/edtTime"
                    style="@style/MatchMatch"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/tv_size_15"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/search_edit_bac"></View>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_above="@+id/llSelection"
            android:layout_marginBottom="10dp"
            android:background="@color/search_edit_bac"></View>

        <LinearLayout
            android:id="@+id/llSelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="1dp"
                android:background="@color/home_scale"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_margin_6"
                android:paddingTop="@dimen/padding_margin_6"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:textSize="@dimen/tv_size_15"/>

            <Button
                android:id="@+id/btnUnsure"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/padding_margin_6"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="1dp"
                android:background="@color/home_scale"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_margin_6"
                android:paddingTop="@dimen/padding_margin_6"
                android:text="@string/unsure"
                android:textColor="@color/white"
                android:textSize="@dimen/tv_size_15"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
