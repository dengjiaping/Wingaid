<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.yd.org.sellpopularizesystem.myView.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/argge">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_margin_10"
                android:gravity="center_horizontal"
                android:text="@string/declaretitle"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_18"
                android:textStyle="bold"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_margin_10"
                android:layout_marginTop="@dimen/padding_margin_10"
                android:text="@string/s_00"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_12"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_margin_20"
                android:layout_marginRight="@dimen/padding_margin_10"
                android:layout_marginTop="@dimen/padding_margin_10"
                android:text="@string/s_11"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_12"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_margin_20"
                android:layout_marginRight="@dimen/padding_margin_10"
                android:layout_marginTop="@dimen/padding_margin_10"
                android:text="@string/s_22"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_12"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_margin_20"
                android:layout_marginRight="@dimen/padding_margin_10"
                android:layout_marginTop="@dimen/padding_margin_10"
                android:text="@string/s_33"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_12"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_margin_10"
                android:layout_marginTop="@dimen/padding_margin_10"
                android:text="@string/s_0"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_12"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_margin_20"
                android:layout_marginRight="@dimen/padding_margin_10"
                android:layout_marginTop="@dimen/padding_margin_10"
                android:text="@string/s_1"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_12"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_margin_20"
                android:layout_marginRight="@dimen/padding_margin_10"
                android:layout_marginTop="@dimen/padding_margin_10"
                android:text="@string/s_2"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_12"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_margin_40"
                android:layout_marginLeft="@dimen/padding_margin_20"
                android:layout_marginRight="@dimen/padding_margin_10"
                android:layout_marginTop="@dimen/padding_margin_10"
                android:text="@string/s_3"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_12"
                />


        </LinearLayout>
    </com.yd.org.sellpopularizesystem.myView.BounceScrollView>

    <Button
        android:id="@+id/argge"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/padding_margin_4"
        android:layout_marginLeft="@dimen/padding_margin_10"
        android:layout_marginRight="@dimen/padding_margin_10"
        android:layout_marginTop="@dimen/padding_margin_4"
        android:background="@color/scale_tab5"
        android:text="@string/s_4"
        android:textColor="@color/white"/>
</RelativeLayout>
