<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/flContent"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/nitLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/scale_tab5"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvTotalSum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_margin_10"
                    android:gravity="center"
                    android:text="@string/totalmoney"
                    android:textColor="@color/white"
                    android:textSize="@dimen/tv_size_12"/>

                <TextView
                    android:id="@+id/tvTotalMoney"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTotalSum"
                    android:layout_marginBottom="@dimen/padding_margin_4"
                    android:layout_marginTop="@dimen/padding_margin_4"
                    android:gravity="center"
                    android:text="- - -"
                    android:textColor="@color/white"
                    android:textSize="@dimen/tv_size_12"/>

            </RelativeLayout>

            <com.yd.org.sellpopularizesystem.myView.DashedLineView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/padding_margin_14"
                android:layout_marginTop="@dimen/padding_margin_14"
                android:layerType="software"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvConfirmSum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_margin_10"
                    android:gravity="center"
                    android:text="@string/confirm_money"
                    android:textColor="@color/white"
                    android:textSize="@dimen/tv_size_12"/>

                <TextView
                    android:id="@+id/tvSureSum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvConfirmSum"
                    android:layout_marginBottom="@dimen/padding_margin_4"
                    android:layout_marginTop="@dimen/padding_margin_4"
                    android:gravity="center"
                    android:text="- - -"
                    android:textColor="@color/white"
                    android:textSize="@dimen/tv_size_12"/>
            </RelativeLayout>

            <com.yd.org.sellpopularizesystem.myView.DashedLineView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/padding_margin_14"
                android:layout_marginTop="@dimen/padding_margin_14"
                android:layerType="software"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvUnconfirmedSum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_margin_10"
                    android:gravity="center"
                    android:text="@string/Unconfirm_money"
                    android:textColor="@color/white"
                    android:textSize="@dimen/tv_size_12"/>

                <TextView
                    android:id="@+id/tvUnsureSum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvUnconfirmedSum"
                    android:layout_marginBottom="@dimen/padding_margin_4"
                    android:layout_marginTop="@dimen/padding_margin_4"
                    android:gravity="center"
                    android:text="- - -"
                    android:textColor="@color/white"
                    android:textSize="@dimen/tv_size_12"/>
            </RelativeLayout>

        </LinearLayout>

        <include layout="@layout/base_listview"/>

    </LinearLayout>


</FrameLayout>
