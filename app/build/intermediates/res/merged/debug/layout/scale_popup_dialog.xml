<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/reansoarent_oneoftwo"
              android:clickable="true"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/scaleLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/shallow_gray"
        android:orientation="vertical">

        <GridView
            android:id="@+id/scaleGridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_margin_10"
            android:layout_marginRight="@dimen/padding_margin_10"
            android:horizontalSpacing="@dimen/padding_margin_10"
            android:listSelector="#00000000"
            android:numColumns="3"
            android:stretchMode="columnWidth">

        </GridView>

        <Button
            android:id="@+id/sureBt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/padding_margin_20"
            android:layout_marginRight="@dimen/padding_margin_20"
            android:layout_marginTop="@dimen/padding_margin_10"
            android:background="@color/gray"
            android:gravity="center"
            android:text="@string/home_sure"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_size_15"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_margin_10">

        </View>

    </LinearLayout>

</LinearLayout>