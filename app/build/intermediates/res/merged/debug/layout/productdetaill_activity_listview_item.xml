<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/llHouseDes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_margin_6"
        android:paddingTop="@dimen/padding_margin_6">

        <ImageView
            android:id="@+id/ivHouse"
            style="@style/WrapWrap"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"
            android:src="@mipmap/greenhome"/>

        <TextView
            android:id="@+id/tvDetailLoc"
            style="@style/MatchWrap"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/padding_margin_4"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_10"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.6"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_margin_6">

        <ImageView
            android:id="@+id/ivBedroom"
            style="@style/WrapWrap"
            android:layout_gravity="center_vertical"
            android:background="@color/transparent"
            android:src="@mipmap/bedroom"/>

        <TextView
            android:id="@+id/tvBedRoom"
            style="@style/WrapWrap"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_10"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/ivBathroom"
            style="@style/WrapWrap"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/padding_margin_4"
            android:src="@mipmap/shower"/>

        <TextView
            android:id="@+id/tvBathroom"
            style="@style/WrapWrap"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_10"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/ivCar"
            style="@style/WrapWrap"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/padding_margin_4"
            android:src="@mipmap/car"/>

        <TextView
            android:id="@+id/tvCarSquare"
            style="@style/WrapWrap"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_10"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvHouseSquare"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/tv_size_10"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvDetailPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/tv_size_10"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:gravity="center">

        <TextView
            android:id="@+id/tvNoPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingLeft="@dimen/padding_margin_4"
            android:text="---"
            android:textColor="#ff0000"/>

        <ImageView
            android:id="@+id/ivHousePic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingLeft="@dimen/padding_margin_4"
            android:src="@mipmap/roomicon"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>